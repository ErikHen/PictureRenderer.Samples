@functions
{
    //just adding line-breaks to make it more readable
    string FormatElement(string element)
    {
        return element
            .Replace("<picture>", "<picture>\n")
            .Replace("</picture>", "\n</picture>")
            .Replace("srcset=\"", "srcset=\"\n ")
            .Replace(", /", ",\n /")
            .Replace(" sizes=", "\n sizes=")
            .Replace("<img", "\n<img")

            ;
    }
